<h2>Change Password</h2>

<form action="/account/update-password" method="post" id="changePasswordForm">
  <label for="account_password">New Password</label>
  <span>Password must be at least 12 characters and contain 1 number, 1 capital letter, and 1 special character.</span>
  <input
    type="password"
    id="account_password"
    name="account_password"
    required
  />

  <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />

  <button type="submit">Change Password</button>
</form>
