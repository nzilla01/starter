 
 <% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%# messages() %>

  <%- view %>

  <% if (login) { %>
  <a href="/reviews/add?invId=<%= vehicle.inv_id %>">
    <button type="button" id="review">Add Review</button>
  </a>
<% } %>
<div id="reviews">
<h3>All Reviews</h3>
<% if (reviews && reviews.length > 0) { %>
  <ul>
    <% reviews.forEach(function(review) { %>
      <li>
        <strong><%= review.account_firstname || 'Anonymous' %>:</strong>
        <%= review.review_text || 'No review text provided.' %> 
        (<%= review.review_rating || '?' %>/5)
        <br>
        <small>
          <% if (review.review_date) { %>
            <%= new Date(review.review_date).toLocaleDateString('en-US', {
              year: 'numeric', month: 'long', day: 'numeric'
            }) %>
          <% } else { %>
            <em>Date not available</em>
          <% } %>
        </small>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No reviews yet.</p>
<% } %>

</div>