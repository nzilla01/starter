<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Vehicle</title>
  <script>
    function validateForm() {
      const fields = [
        "inv_make",
        "inv_model",
        "inv_year",
        "inv_description",
        "inv_image",
        "inv_thumbnail",
        "inv_price",
        "inv_miles",
        "inv_color"
      ];
      let valid = true;
      let errorMsg = "";

      fields.forEach(field => {
        const input = document.getElementById(field);
        if (!input.value.trim()) {
          valid = false;
          errorMsg += `${field.replace('inv_', '').replace('_', ' ')} is required.\n`;
        }
      });

      const year = document.getElementById("inv_year").value;
      if (isNaN(year) || year.length !== 4) {
        valid = false;
        errorMsg += "Year must be a valid 4-digit number.\n";
      }

      const price = document.getElementById("inv_price").value;
      if (isNaN(price) || price <= 0) {
        valid = false;
        errorMsg += "Price must be a positive number.\n";
      }

      if (!valid) {
        alert(errorMsg);
      }

      return valid;
    }
  </script>
</head>
<body>
  <h1>Add New Vehicle</h1>

  <% if (message) { %>
    <p class="flash"><%= message %></p>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <ul class="errors">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-inventory" method="POST" onsubmit="return validateForm();">
    <label for="classificationList">Classification:</label>
    <%= classificationList %> <!-- Passed from controller -->
    <br><br>

    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required /><br>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required /><br>

    <label for="inv_year">Year:</label>
    <input type="text" id="inv_year" name="inv_year" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" required /><br>

    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea><br>

    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>" required /><br>

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" required /><br>

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" step="0.01" value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" required /><br>

    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" required /><br>

    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" required /><br><br>

    <button type="submit">Add Vehicle</button>
  </form>
</body>
</html>
