

<h1>Add New Inventory</h1>

<% if (message && message.length > 0) { %>
  <div class="flash-message"><%= message %></div>
<% } %>

<form action="/inv/add-inventory" method="post" id="addInventoryForm" novalidate>



<%- classificationList %>


  <label for="inv_model">Model:</label>
  <input 
    type="text" 
    id="inv_model" 
    name="inv_model" 
    required 
    value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>"
  >

  <label for="inv_year">Year:</label>
  <input 
    type="number" 
    id="inv_year" 
    name="inv_year" 
    min="1900" 
    max="2099"
    required 
    value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>"
  >

  <label for="inv_description">Description:</label>
  <textarea 
    id="inv_description" 
    name="inv_description" 
    required
  ><%= typeof inv_description != 'undefined' ? inv_description : '' %></textarea>

  <label for="inv_image">Image Path:</label>
  <input 
    type="text" 
    id="inv_image" 
    name="inv_image" 
    required 
    value="<%= typeof inv_image != 'undefined' ? inv_image : '/images/no-image.png' %>"
  >

  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input 
    type="text" 
    id="inv_thumbnail" 
    name="inv_thumbnail" 
    required 
    value="<%= typeof inv_thumbnail != 'undefined' ? inv_thumbnail : '/images/no-image-thumb.png' %>"
  >

  <label for="inv_price">Price:</label>
  <input 
    type="number" 
    id="inv_price" 
    name="inv_price" 
    step="0.01" 
    required 
    value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>"
  >

  <label for="inv_miles">Miles:</label>
  <input 
    type="number" 
    id="inv_miles" 
    name="inv_miles" 
    required 
    value="<%= typeof inv_miles != 'undefined' ? inv_miles : '' %>"
  >

  <label for="inv_color">Color:</label>
  <input 
    type="text" 
    id="inv_color" 
    name="inv_color" 
    required 
    value="<%= typeof inv_color != 'undefined' ? inv_color : '' %>"
  >

  <button type="submit">Add Vehicle</button>
</form>

<script>
  // Optional client-side validation feedback
  document.getElementById("addInventoryForm").addEventListener("submit", function (event) {
    if (!this.checkValidity()) {
      event.preventDefault()
      alert("Please fill in all required fields correctly.")
    }
  })
</script>
 <script src="../js/script.js"></script>